html 
  box-sizing border-box

*, *:before, *:after 
  box-sizing inherit

*
    list-style none
    border 0
    padding 0
    margin 0
    text-decoration none
    
*
    &:focus
        outline: none;
        transition()
   

//----------- effects - animates  ----
transition(property=all, duration=0.3s, effect=ease-in-out) 
    -webkit-transition property duration effect
    -moz-transition property duration effect
    -ms-transition property duration effect
    transition property duration effect
        
// building form with search field

.focus
    background-color rgba(247,76,42,1)
    padding 35px
    
    &__disable
        position: fixed;
        width: 100%;
        height: 100%
        top 0
        left 0
        bottom 0
        right 0
        
        opacity: 0
        visibility: hidden;
        transition();
        
    &__form
        display flex
        flex-flow row wrap
        justify-content space-between
        align-items center
        
        width 64%
        margin 0 auto 0
        
        height 72px
        
    &__cont
        background-color #fff
        width 80%
        margin 0 
        padding 0
        height 100%
        
    &__in
        color #333
        background-color #fff
        display block
        width 100%
        height 100%
        padding 28px
        
        position relative
        
        z-index 100
        
        &:focus ~ .focus__disable
            background rgb(0,0,0)
            z-index 99
            
            opacity: .45
            visibility: visible;
        
    &__btn
        color rgba(236,3,25,.8)
        font-size 22px
        font-family Helvetica, sans-serif
        background-color rgba(255,153,0,1)
        width 20%
        padding 23px
        border 0
        z-index 9999
